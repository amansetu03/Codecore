<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"

    android:layout_marginTop="10dp"
    android:layout_marginLeft="15sp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"

    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/material_dynamic_primary20"
    android:outlineSpotShadowColor="@color/black"
    android:elevation="5dp"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/material_dynamic_primary20">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/displaysubjectname"
            android:textAlignment="center"
            android:textSize="22sp"
            android:text="Subject Name"
            android:textColor="@color/material_dynamic_primary80"
            android:textStyle="bold"/>
        <TextView
            android:textAlignment="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/displaystartdate"
            android:textSize="22sp"
            android:text="Assign date"
            android:textColor="@color/white"
            />
        <TextView
            android:textAlignment="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/displayenddate"
            android:textSize="22sp"
            android:text="end Date"
            android:textColor="@color/white"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>